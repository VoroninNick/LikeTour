                    background-color: #d1d3d4 // Old browsers
                    @include filter-gradient(#fff, #d1d3d4, vertical) // IE6-9
                    @include background-image(linear-gradient(top, #fff  0%,#d1d3d4 100%))
                    @include background-image(linear-gradient(top,  #fff 0%,#d1d3d4 100%))
                    font:
                        family: 'Fira Sans', sans-serif
                        size: 1.0625rem
                        weight: 500
                    border: 1px solid #BCBEC0
                    &.open:after
                        display: block
                        content: ''
                        +triangle(top, 6px, #ed1555)
                        right: 11px
                        top: 8px
                        position: absolute
                    &:before
                        display: block
                        content: ''
                        width: 1px
                        height: 42px
                        background: #BCBEC0
                        top: 0
                        right: 40px
                        position: absolute
                    &:after
                        display: block
                        content: ''
                        +triangle(bottom, 6px, #ed1555)
                        right: 11px
                        top: 15px
                        position: absolute
                ul.options
                    width: 252px
                    border-top: 1px solid #bcbec0
                    border-bottom: 1px solid #bcbec0
                    li
                        width: 100%
                        height: 42px
                        color: #2A424B
                        // needs latest Compass, add '@import "compass"' to your scss
                        background-color: #d1d3d4 // Old browsers
                        @include filter-gradient(#fff, #d1d3d4, vertical) // IE6-9
                        @include background-image(linear-gradient(top, #fff  0%,#d1d3d4 100%))
                        @include background-image(linear-gradient(top,  #fff 0%,#d1d3d4 100%))
