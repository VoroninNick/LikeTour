                            background-color: #2A3A4B // Old browsers
                            @include filter-gradient(#0B1B2A, #2A3A4B, vertical) // IE6-9
                            @include background-image(linear-gradient(top,  #0B1B2A 0%,#2A3A4B 100%))
                            color: #d1d3d4
                            padding-left: 40px
                            &:before
                                display: block
                                content: ''
                                width: 10px
                                height: 100%
                                // needs latest Compass, add '@import "compass"' to your scss
                                background-color: #9c2242 // Old browsers
                                @include filter-gradient(#9c2242, #ed1555, horizontal) // IE6-9
                                @include background-image(linear-gradient(left,  #9c2242 0%,#ed1555 100%))
                                position: absolute
                                left: 0
                                top: 0
                        &.selected
                            // needs latest Compass, add '@import "compass"' to your scss
                            background-color: #2A3A4B // Old browsers
                            @include filter-gradient(#0B1B2A, #2A3A4B, vertical) // IE6-9
                            @include background-image(linear-gradient(top,  #0B1B2A 0%,#2A3A4B 100%))
                            color: #d1d3d4
        .find-button
            position: absolute
            left: 0
            right: 0
            bottom: 0
            cursor: pointer
            &:hover
