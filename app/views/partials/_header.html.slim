              .columns.large-3.medium-3
                .header-height.soc-icon
                  a
                    = image_tag ("LT-social-Twitter (passive).svg"), class: "social-icon-passiwe"
                    = image_tag ("LT-social-Twitter (active).svg"), class: "social-icon-active"
              .columns.large-3.medium-3
                .header-height.soc-icon
                  a
                    = image_tag ("LT-social-VK (passive).svg"), class: "social-icon-passiwe"
                    = image_tag ("LT-social-VK (active).svg"), class: "social-icon-active"

        .columns.large-4.medium-4
