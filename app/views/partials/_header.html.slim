.header-wrap
  .hide-navigation-wrap
    #main-menu
      .row
        .columns
          nav
            ul
              li
                a href=about_us_path(locale: I18n.locale)
                  |Про нас
              - parent = Category.where(:parent_id => nil)
              - parent.each do |c|
                li class=("has-dropdown" if c.child_categories && c.child_categories.count > 0)
                  =link_to category_path(c.slug, locale: I18n.locale) do
                    =c.name

                  -if c.child_categories && c.child_categories.count > 0
                    ul.dropdown
                      - c.child_categories.each do |ch|
                        -if ch.tours.count > 0
                          li
                            =link_to category_path(url: "#{c.slug}/#{ch.slug}", locale: I18n.locale) do
                              =ch.name
                              span
                                |(
                                =ch.tours.count
                                |)

              li
                a href=publication_path(locale: I18n.locale)
                  |Публікації
              li
                a href=contacts_path(locale: I18n.locale)
                  |Контакти
    #contacts-menu.hide
      .row
        .columns.large-4.medium-4
          .main-menu-social-links
            .row
              .columns.large-3.medium-3
                .header-height.soc-icon
                  a
                    = image_tag "LT-social-facebook (passive).svg", class: "social-icon-passiwe"
                    = image_tag ("LT-social-facebook (active).svg"), class: "social-icon-active"
              .columns.large-3.medium-3
                .header-height.soc-icon
                  a
                    = image_tag ("LT-social-g+ (passive).svg"), class: "social-icon-passiwe"
